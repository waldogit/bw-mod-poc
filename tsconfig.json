{
    "compilerOptions": {
      "experimentalDecorators": true,
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "esnext", "es2015"],
      "paths": {"*": [
        "node_modules/*",
        "src/types/*"
      ]},
      "baseUrl": ".",
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./bw-mod-server/src",
    },
    "files": ["bw-mod-server/src/index.ts"],
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }